<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Accelerometer Visualizer</title>
  <style>
    /* Dark mode styling */
    body {
      margin: 0;
      padding: 0;
      font-family: sans-serif;
      background-color: #121212;
      color: #ffffff;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      height: 100vh;
    }
    #accValue {
      margin: 16px;
      font-size: 2rem;
    }
    #graph {
      border: 1px solid #444;
      background-color: #1e1e1e;
      width: 90%;
      max-width: 600px;
      height: 200px;
    }
  </style>
</head>
<body>
  <div id="accValue">Acceleration: 0.00 m/s²</div>
  <canvas id="graph"></canvas>

  <script>
    const accValueEl = document.getElementById('accValue');
    const canvas = document.getElementById('graph');
    const ctx = canvas.getContext('2d');

    // Resize canvas to device pixel ratio
    function resizeCanvas() {
      const dpr = window.devicePixelRatio || 1;
      canvas.width = canvas.clientWidth * dpr;
      canvas.height = canvas.clientHeight * dpr;
      ctx.scale(dpr, dpr);
    }
    resizeCanvas();
    window.addEventListener('resize', resizeCanvas);

    let dataPoints = [];
    const maxPoints = 100;

    function drawGraph() {
      // Clear
      ctx.clearRect(0, 0, canvas.clientWidth, canvas.clientHeight);
      // Draw line
      ctx.beginPath();
      ctx.strokeStyle = '#4caf50';
      ctx.lineWidth = 2;
      dataPoints.forEach((val, i) => {
        const x = (canvas.clientWidth / (maxPoints - 1)) * i;
        const y = canvas.clientHeight - (val / 20) * canvas.clientHeight; // assume max ~20 m/s2
        if (i === 0) ctx.moveTo(x, y);
        else ctx.lineTo(x, y);
      });
      ctx.stroke();
    }

    function handleMotion(event) {
      // Use acceleration (excluding gravity) if available, otherwise fallback
      let ax = event.acceleration.x;
      let ay = event.acceleration.y;
      let az = event.acceleration.z;
      if (ax === null || ay === null || az === null) {
        // Fallback to including gravity and subtract approx gravity
        ax = event.accelerationIncludingGravity.x;
        ay = event.accelerationIncludingGravity.y;
        az = event.accelerationIncludingGravity.z - 9.80665;
      }
      // Compute magnitude
      const magnitude = Math.sqrt(ax*ax + ay*ay + az*az);
      // Update numeric display
      accValueEl.textContent = `Acceleration: ${magnitude.toFixed(2)} m/s²`;
      // Update data
      dataPoints.push(magnitude);
      if (dataPoints.length > maxPoints) dataPoints.shift();
      drawGraph();
    }

    // Request permission on iOS 13+ devices
    function init() {
      if (typeof DeviceMotionEvent.requestPermission === 'function') {
        DeviceMotionEvent.requestPermission()
          .then(permissionState => {
            if (permissionState === 'granted') {
              window.addEventListener('devicemotion', handleMotion);
            } else {
              accValueEl.textContent = 'Permission denied';
            }
          })
          .catch(console.error);
      } else {
        window.addEventListener('devicemotion', handleMotion);
      }
    }
    init();
  </script>
</body>
</html>
